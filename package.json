{
  "name": "rem-theme",
  "scripts": {
    "build": "rm -rf dist && npx postcss src/**/*.less -d dist --ext css dist --no-map --env production",
    "format": "prettier --loglevel warn --write \"**/*.{js,css,less,md}\"",
    "posttest": "npm run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "cssnano": "^5.0.2",
    "husky": ">=6",
    "less": "^4.1.1",
    "lint-staged": ">=10",
    "postcss": "^8.2.14",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "postcss-less": "^4.0.1",
    "postcss-nested": "^5.0.5",
    "postcss-url": "^10.1.3",
    "prettier": ">=2"
  },
  "lint-staged": {
    "*.{js,css,less,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  }
}
